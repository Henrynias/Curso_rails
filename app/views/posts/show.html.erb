<div class= "shadow p-3 mb-5 bg-white rounded"> 
  <div class="text-center">
    <h2><%= @post.title %></h2>
    <p>Criado por <%= @post.author %></p><br>
    <hr>
  </div>
  <div class="px-5">
    <p><%= @post.body.gsub("\n", "<br>").html_safe %></p>
  </div>
</div>

<div class="m-5 ">
  <div class="text-center">
    <h4>
      <%= @post.comments.count %> coment√°rio </p>
      <% if @post.comments.count == 0 %>
        <span> Seja o primeiro a comentar</span>
      <%end%>

    </h4>
  </div>

  <% form_with model: @comment, local: true do |form| %>
    <div class= "form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <div class= "form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", rows: 5 %>
    </div>

    <%= form.submit "Enviar", class: "btn btn-primary", data: { disable_with: "Enviando..." }%>
  <% end %>

</div>

<div>
  <%= link_to " ", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>
</div>
 